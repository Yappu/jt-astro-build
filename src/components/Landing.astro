---
import { getImage } from "astro:assets";
import LandingImage from "../assets/262-unsmushed.jpg"
const landingbgImage = await getImage({ src: LandingImage });
---
<div style={`background-image: url('${landingbgImage.src}')`}>
  <h3>Velkommen til</h3>
  <h1>JT Anlæg</h1>
  <h3>Din Anlægsgartner i Midtjylland</h3>
</div>

<style>
	div {
		width: 100%;
		height: 60vh;
    background-color: rgb(101, 128, 70);
		background-size: cover;
		background-position: center;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		color: #fff;
    background-blend-mode: multiply;
	}
</style>