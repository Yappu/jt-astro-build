---
import Footercardjohn from "./Footercardjohn.astro";
import Footercardkrestina from "./Footercardkrestina.astro";
import dka from "../assets/Aktiv-12221.svg"
---

<footer>
  <a href=https://www.dnb.com/da-dk/produkter-og-tjenester/live-rating-logo/ target="_blank"><img src=https://ratinglogo.bisnode.com/275439-1747770421283350731.svg height="250"/></a>
  <div>
    <Footercardjohn />
    <Footercardkrestina />
  </div>
  <h3>Vi er medlem af</h3>
  <img src={dka.src} alt="" srcset="">
  <span>© JT Anlæg – 2023</span>
</footer>

<style>
  footer {
    background-color: #fff;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    color: #fff;
    width: 100%;
    background-color: rgb(101, 128, 70);
  }

  span {
    background-color: rgb(101, 128, 70);
    width: 100%;
    text-align: center;
    padding-block: 1rem 0.5rem;
  }

  footer:nth-child(3) > img:nth-child(4) {
    width: 200px;
  }
  
  footer:nth-child(3) > a:nth-child(1) > img:nth-child(1) {
    margin-block: 2rem;
    height: 250px;
  }

  @media (min-width: 900px) {
    div {
      display: flex;
      width: 80%;
      max-width: 1280px;
      justify-content: space-between;
      gap: 5rem;
      padding-inline: 2rem;
    }
  }
</style>