---
import { Image } from "astro:assets";
import johnfooter from "../assets/John.webp";
---
<div>
  <h2>Erhvervskonsulent</h2>
  <Image 
    src={johnfooter}
    alt="John Tangaard"
    width="130"
    height="200"
  />
  <h3>John Tangaard</h3>
  <a href="mailto: jlt@jtanlaeg.dk">jlt@jtanlaeg.dk</a>
  <a href="tel:+45 77 77 00 44">Tlf: 77 77 00 44</a>
</div>

  <style>
    div {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.25rem;
      isolation: isolate;
      margin-block-end: 2rem;
    }

    h2 {
      text-transform: uppercase;
    }

    a {
      color: #fff;
      text-decoration: none;
      margin-block-end: 0.5rem;
      font-size: 0.75rem;
    }

    img {
      border-radius: 5px;
    }

    @media (min-width: 900px){
      div {
        display: grid;
        grid-template-columns: 130px 1fr;
        grid-column-gap: 1rem;
      }

      h2 {
        grid-column: 1 / span 2;
        grid-row: 1 / span 1;
        align-self: end;
      }

      h3, a {
        grid-column: 2 / span 1;
      }

      img {
        grid-column: 1 / span 1;
        grid-row: 2 / span 4;
        justify-self: stretch;
        align-self: stretch;
      }
      
      h3, a {
        align-self: end;
      }

      h2, h3, a {
      white-space: nowrap;
      }
    }
  </style>